@model ASN.Models.MyCustomIdentity
@{
    ViewBag.Title = "ASN";
}
<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        margin-bottom:auto;
        margin-top:auto;
        width: 50%;
    }
</style>

@if (User.Identity.IsAuthenticated)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <img src="~/Content/images/ASNInicio.jpg" class="img-fluid center" alt="Responsive image" style="max-width: 100%;height: auto;" />
            </div>
        </div>
        <br />
        <div class="row">
            <div class="jumbotron">
                <div class="control-label" style="color:black;font-size:30px;text-align:center;">
                    Hola, @Model.UserInfo.FullName
                </div>
            </div>
        </div>
    </div>

}
else
{
    <p>You are not logged in</p>

    Response.Redirect(Url.Action("Login", "Home"));
}
