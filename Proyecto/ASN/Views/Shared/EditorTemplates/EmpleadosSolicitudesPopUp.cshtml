@model  ASN.Models.CatEmpleadosSolicitudesSel_Result

<style>
    tr.spaceUnder > td {
        padding-bottom: 1em;
    }
</style>
<div class="col-lg-12 col-md-12">
    <div class="k-edit-form-container" style="width:500px;">
        <div class="editor-label">
            <label for="MotivoId">Concepto de motivo</label>
        </div>
        <div class="editor-field">
            @(Html.Kendo().MultiSelectFor(x => x.CatConceptoMotivoId)
                .DataSource(source =>
                {
                    source.Read(read =>
                    {
                        read.Action("GetConceptosMotivosCMB", "ConceptosMotivos");
                    });
                })
                .Filter("contains")
                //.OptionLabel("- Concepto de motivo - ")
                .DataValueField("Ident")
                .DataTextField("Valor")
                .Name("CatConceptoMotivoId")
                //.Events(x => x.DataBound("getName"))      
                //.HtmlAttributes(new { onchange = "AdministraControles()" }))
                .HtmlAttributes(new { required = "required", style = "text-align:center;width: 22.4em" })
            )
            @(Html.Kendo().CheckBox().Name("TTConceptoMotivoId").Label("(Todos)")) 
        </div>
        <div class="editor-label">
            <label for="ResponsableIncidenteId">Responsable de incidente</label>
        </div>
        <div class="editor-field">
            @(Html.Kendo().DropDownListFor(x => x.Manager_Ident)
                .DataSource(source =>
                {
                    source.Read(read =>
                    {
                        read.Action("GetEmpleadosCMB", "EmpleadosSolicitudes");
                    });
                })
                .Filter("contains")
                .OptionLabel("- Responsable - ")
                .DataValueField("Ident")
                .DataTextField("Nombre")
                .Name("Manager_Ident")
                // .Events(x => x.Change("rellenaFechasMes").DataBound("getName").DataBound("validando"))//
                .HtmlAttributes(new { required = "required", style = "text-align:center;width: 15.4em", validationMessage = "Este campo es requerido." })
            )
            @(Html.Kendo().CheckBox().Name("TTManager_Ident").Label("(Todos)")) 
        </div>
        <div class="editor-label">
            <label for="Monto">Parámetro: Monto</label>
        </div>
        <div class="editor-field">
            @(Html.Kendo().NumericTextBox().Name("Monto").Min(0).HtmlAttributes(new { style = "text-align:center;width: 15.4em" }))
            @(Html.Kendo().CheckBox().Name("TTMonto").Label("(Todos)"))
        </div>
        <div class="editor-label">
            <label for="DetalleId">Detalle</label>
        </div>
        <div class="editor-field">
            @(Html.Kendo().TextBox().Name("DetalleId").HtmlAttributes(new { style = "text-align:center;width: 15.4em" }))
            @(Html.Kendo().CheckBox().Name("TTDetalleId").Label("(Todos)"))
            @*@(Html.Kendo().DropDownList()
            .DataSource(source =>
            {
                source.Read(read =>
                {
                    read.Action("GetConsecutivoPeriodoNominaCMB", "PeriodoNomina");
                })
                .ServerFiltering(true);
            })
            .Filter("contains")
            .OptionLabel("- Consecutivo - ")
            .DataValueField("Ident")
            .DataTextField("Valor")
            .Name("ConsecutivoId")
            //.Events(x => x.DataBound("validando").Change("getName"))
            .HtmlAttributes(new { required = "required", style = "text-align:center;width: 22.4em" })
        )*@
        </div>
        <div class="editor-label">
            <label for="TipoPeriodo">Periodo original</label>
        </div>
        <div class="editor-field">
            @(Html.Kendo().DropDownList()
                .DataSource(source =>
                {
                    source.Read(read =>
                    {
                        read.Action("GetPeriodoNominaCMB", "EmpleadosSolicitudes");
                    });
                })
                .Filter("contains")
                .OptionLabel("- Periodo original - ")
                .DataValueField("Ident")
                .DataTextField("Valor")
                .Name("PeriodoNominaId")
                .HtmlAttributes(new { required = "required", style = "text-align:center;width: 15.4em" })
            //.Events(x => x.Change("getName"))
            )
            @(Html.Kendo().CheckBox().Name("TTPeriodoNomina").Label("(Todos)"))
        </div>
        <input type="hidden" id="PeriodicidadId" value=""/>
        @*<p>
            Nota:
            <b>Todos los registros heredaran la misma información que se configure en el formulario.</b>
        </p>*@
</div>
</div>