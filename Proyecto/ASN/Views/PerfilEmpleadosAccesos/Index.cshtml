                                    <span class="k-icon k-i-save"></span>Guardar
                                </button>
                            </div>
                        </div>*@
                </div>
            </div>
        </div>
    </div>
    <script>
        var listaEmpleados = "";
        var selectedEmpleados = new Array();
        var grid = $('#grid');
